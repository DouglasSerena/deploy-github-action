{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "action",
    "declarationDir": "action/types",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "action",
  ],
  "include": [
    "**/*"
  ]
}