{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "outDir": "action",
    "moduleResolution": "node",
    "declarationDir": "action/types",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}